<%= semantic_form_for [:admin, @user], :html => {:multipart => true} do |f| %>


<%= f.inputs do %>
<% if f.object.new_record? %>
<%= f.input :email %>
<% end %>
<%= f.input :role, :as => :select, :collection => Hash[User::ROLES.map { |k| [t(k), k] }] %>
<% if f.object.new_record? %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<% end %>
<%= f.input :check %>
<% end %>

<%= f.actions %>

<% end %>

