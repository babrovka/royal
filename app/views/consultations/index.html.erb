<div class="container" id="consultations">
  <div class="row">
    <div class="span6">
      <h1>консультация технолога</h1>
	</div>

	<div class="span2">
		<div class="quick-search">Не нашли ответа?</div>
	</div>
	
	<div class="span4">
		<div class="search">
		<form id="footsearch" accept-charset="UTF-8" action="/search" method="get">
			<input name="utf8" type="hidden" value="&#x2713;" />
			<input type="text" name="testfind" class="search-input" onfocus="if(this.value=='Задайте свой вопрос') this.value='';" onblur="if(this.value=='') this.value='Задайте свой вопрос';" value="Задайте свой вопрос" />
			<a href="/" class="search-submit"></a>
		</form>
		</div>
	</div>
	
    <div class="span12"><div class="line"></div></div>

	<div class="span4 brand" id=""><%= link_to "Выбор по случаям применения", "#", :class => 'normal-link' %></div>
	<div class="span4 brand" id=""><%= link_to "Выбор по продуктам", "#", :class => 'normal-link' %></div>
	<div class="span4 brand" id=""><%= link_to "Все вопросы", "#", :class => 'normal-link' %></div>
	
	
	<div class="span12">
	  <div id="cosultations_frame">
		<h1>Общие вопросы</h1>
		<% @consultations.each do |consultation| %>
		Вопрос: <%= consultation.question %>
		<br/><br/>
		Ответ: <%= consultation.answer %>
		<br/><br/>
		Продукты: 
		  <% consultation.products.each do |product, index| %>
		  <%= link_to product.title, product %>
		  <% end %>
		<% end %>
	  </div>
	</div>
	
	
	
  </div>	
</div>