<div class="container" id="products">
	
  <div class="row">
    <div class="span3">
      <h1>продукция</h1>
	</div>
	<div class="span9">
		<%= form_tag('/products/select') do %>
		<% Taxonomy.all.each do |taxonomy| %>		
		<div class="dropdown taxonomy">
			<a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
			    <%= taxonomy.title %>
			    <b class="caret"></b>
			  </a>
		  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
		    <% taxonomy.taxons.each do |taxon| %>
			<li>
			  <label class="checkbox"><%= check_box_tag 'taxon_ids[]', taxon.id %><%= taxon.title %></label> 
			</li>
			<% end %>
		  </ul>
		</div>
		
		<% end %>
		<%= submit_tag "Сортировать", :class => 'select_products' %>
		<% end %>
	</div>
  </div>

  <div class="row">
	<div class="span12"><div class="line"></div></div>
  </div>

  <div class="row">
	<div class="span4 brand" id="bronte"><%= bronte_link %></div>
	<div class="span4 brand" id="belter"><%= belter_link %></div>
	<div class="span4 brand" id="thalissi"><%= thalissi_link %></div>
  </div>

  

  <div class="row" id="products-catalog">
	
	
	<%= render :partial => 'products/products', :@products => @products %>
	

  </div>

</div>