<div style="width: 320px; float: left; margin-right: 40px">
	<div class="header">Новости компании</div>
	<%= link_to "все новости", news_path, :class => "content-header-link" %>
	<div class="line"></div>
	<% unless @articles.blank? %>
	<% @articles.each do |article| %>
	<div class="column-element">
	<%= link_to article.title, articles_path, :class => "element-header-link" %>
	<div class="element-date"><%= article.date.strftime("%d.%m.%Y") %></div>
	<div class="element-text"><%= truncate(strip_tags(article.text), length: 75).html_safe %> <%= link_to "читать далее", articles_path %></div>
	</div>
	<% end %>
	<% end %>
</div>