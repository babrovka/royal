<div class="container">
  <div class="row">
    <div class="span12">
      <h1>студия профессионального роста</h1>
	</div>

    <div class="span9">
	  	<div id="events">
		
		<%= collection_select(:city_id, :city_id, @cities, :id, :title, {:prompt=>"Выберите город"}, {:class=>'event_city_select', :id=>'event_city_select'}) %>
		

		  <div id="month">
			<div class="month-inner">
		    <%= link_to "предыдущий месяц", {date: @date.prev_month}, :class => 'prev_month' %>
		    <div class="current_month"><%= Russian::strftime(@date, "%B %Y") %></div>
		    <%= link_to "следующий месяц", {date: @date.next_month}, :class => 'next_month' %>
			</div>
		  </div>
		  <%= calendar @date do |date| %>
		    
		    <div class="date-inner">
			      <%= date.day %>
			      	<% if @events_by_date[date] %>
						<div class="bubble">
						<%= link_to "закрыть", "#", :class => "close" %>
						<div class="date"><%= @date.strftime("%d.%m.%Y") %></div>
						<% @events_by_date[date].each do |event| %>
						<div class="event-title">
						<%= link_to event.title, event, :class => "link" %>
						</div>
						<div class="event-text">
						<%= truncate(strip_tags(event.text), length: 185).html_safe %>
						</div>
						<div class="event-title">
						<%= link_to "читать далее", event, :class => "link" %>
						</div>
						<% end %>
						<span class="bubble-arrow"></span>
						</div>
					<% end %>
			  </div>
		  <% end %>
		</div>
	</div>
	
	<div class="span3">
    <div class="header">Новости компании</div>
	  <div class="line"></div>
		<%= render 'layouts/product-news' %>
		<%= link_to "все новости", articles_path, :class => 'content-header-link product' %>
	</div>
<!--
	
	<% @widget_events.each do |event| %>
	<div class="span6 event-widget">
		<%= event.title %>
	</div>
	<% end %>
	-->

  </div>	
</div>