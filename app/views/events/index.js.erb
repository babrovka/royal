$('#events').html('<%=j render :partial => 'events', :@events => @events, :@events_by_date => @events_by_date, :@date => @date %>');
$(".calendar td").on('click', function () {				
	bubble = $(this).find('.bubble');
	bubble.show();
	$('.bubble').not(bubble).hide();
	
	if(bubble.length == 0) {
		$('.bubble').hide();
	}
		
});

$('.close').on("click", function() {
		$(this).parent().hide();
		return false
});