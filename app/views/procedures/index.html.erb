<div class="container" id="products">
  <div class="row">
    <div class="span6">
      <h1>процедуры</h1>
	</div>
    

	<div class="span12">
	  <div id="cosultations_frame" style="margin-top: 0px;">
		<% @procedures.each do |procedure| %>
		<div class="consultation">
			
		<div class="short">
		<%= link_to procedure.title, "#", :class => 'consultaion_open_link open' %>
		</div>
		
		<div class="full" style="display: none;">	
		<%= link_to "свернуть", "#", :class => 'consultaion_close_link close' %>	
		<div class="title"><%= procedure.title %></div>
		<% procedure.stages.to_enum.with_index(1).each do |stage, index| %>
		<p><b>Стадия <%= index %>:</b> <%= stage.title %> <br/> <br/>
		<% stage.substages.to_enum.with_index(1).each do |substage, index| %>	
		Этап<%= index %>:<br><%= substage.text %><br>
		
		<% unless substage.product.nil? %>
		Продукты: <%= link_to substage.product.title, substage.product %></p>
		<% end %>
		<% end %>
		
		<% end %>
		
		</div>
		
		</div>
		<% end %>
	  </div>
	</div>
	
	
	
  </div>	
</div>