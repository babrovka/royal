<div id="photo-gallery" class="gallery">
<% @albums.each do |album| %>
<div class="span3 album">
<% unless album.album_images.blank? %>
<%= link_to image_tag(album.album_images.first.image.url(:thumb)), album_path(album) %>
<% end %>
<%= link_to album.title, album_path(album), :class => 'album_link' %>
</div>
<% end %>
</div>